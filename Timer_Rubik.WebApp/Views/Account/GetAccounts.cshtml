@model List<DTO.Admin.GetAccountDTO>;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Account | Adminitrator";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
                // Mã HTML khi điều kiện đúng

            @foreach (var accounts in Model)
            {
                <tr>
                    <td>
                        <img src="@accounts.Thumbnail" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; flex-shrink: 0" />
                    </td>
                    <td>@accounts.Name</td>
                    <td>@accounts.Email</td>
                    <td>@accounts.CreatedAt.ToString("dd-MM-yyyy")</td>
                    <td>@accounts.UpdatedAt.ToString("dd-MM-yyyy")</td>
                    <td>
                        <a href="Employees/View/@accounts.Id">View</a>
                    </td>
                </tr>
            }
        }
        else
        {
            // Mã HTML khi điều kiện không đúng

            <tr>
                <td colspan="6">No accounts found.</td>
            </tr>
        }
    </tbody>
</table>